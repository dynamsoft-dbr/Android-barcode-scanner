<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
	xmlns:android="http://schemas.android.com/apk/res/android"
	xmlns:app="http://schemas.android.com/apk/res-auto"
	xmlns:tools="http://schemas.android.com/tools"
	android:layout_width="match_parent"
	android:layout_height="match_parent"
	android:background="#fff1f2f7"
	tools:layout_editor_absoluteY="25dp">
	<LinearLayout
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:id="@+id/btn_history"
		android:layout_marginTop="20dp"
		android:layout_marginRight="25dp"
		app:layout_constraintEnd_toEndOf="parent"
		app:layout_constraintTop_toTopOf="parent">
		<Button
			android:layout_width="25dp"
			android:layout_height="25dp"
			android:background="@drawable/icon_history" />

		<TextView
			android:layout_width="wrap_content"
			android:layout_height="28dp"
			android:layout_marginLeft="4dp"
			android:text="History"
			android:textSize="18sp"
			android:gravity="center" />
	</LinearLayout>
	<TextView
		android:id="@+id/tv_startup_title"
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:layout_marginTop="50dp"
		android:text="Barcode Scanner X"
		android:textColor="@android:color/black"
		android:textSize="28sp"
		app:layout_constraintEnd_toEndOf="parent"
		app:layout_constraintHorizontal_bias="0.22"
		app:layout_constraintStart_toStartOf="parent"
		app:layout_constraintTop_toTopOf="parent" />
	<LinearLayout
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:visibility="gone"
		app:layout_constraintEnd_toEndOf="parent"
		android:layout_marginTop="115dp"
		app:layout_constraintStart_toStartOf="parent"
		app:layout_constraintTop_toTopOf="parent"
		android:id="@+id/tv_general">
		<TextView
			android:layout_width="360dp"
			android:layout_height="90dp"
			android:orientation="horizontal"
			android:background="#ffffff"
			android:gravity="center_vertical"
			android:paddingLeft="15dp"
			android:paddingRight="10dp"
			android:textSize="15sp"
			android:text="@string/general_show_detail"/>

	</LinearLayout>
	<LinearLayout
		android:id="@+id/view_general"
		android:layout_width="360dp"
		android:layout_height="90dp"
		app:layout_constraintEnd_toEndOf="parent"
		android:layout_marginTop="115dp"
		android:orientation="horizontal"
		android:background="#ffffff"
		app:layout_constraintStart_toStartOf="parent"
		app:layout_constraintTop_toTopOf="parent">
		<LinearLayout
			android:id="@+id/btn_general"
			android:layout_width="wrap_content"
			android:layout_height="90dp"
			android:orientation="horizontal"
			android:clickable="true"
			android:focusable="true">
			<ImageView
				android:layout_width="@dimen/btn_startup_size"
				android:layout_height="@dimen/btn_startup_size"
				android:layout_marginLeft="20dp"
				android:layout_gravity="center_vertical"
				android:background="@drawable/icon_generalscan"
				app:layout_constraintEnd_toEndOf="parent"
				app:layout_constraintStart_toStartOf="parent"
				app:layout_constraintTop_toBottomOf="@+id/tv_startup_title" />
			<LinearLayout
				android:layout_width="wrap_content"
				android:layout_height="match_parent"
				android:layout_marginLeft="20dp"
				android:layout_marginTop="15dp"
				android:orientation="vertical">
				<TextView
					android:layout_width="wrap_content"
					android:layout_height="wrap_content"
					android:textColor="#000000"
					android:text="@string/general_scan"/>
				<TextView
					android:layout_width="200dp"
					android:layout_height="wrap_content"
					android:layout_marginTop="8dp"
					android:textColor="#ffb8b8bf"
					android:text="@string/one_off_scan"/>
			</LinearLayout>
		</LinearLayout>
		<ImageButton
			android:id="@+id/btn_general_show_detail"
			android:layout_width="20dp"
			android:layout_height="50dp"
			android:background="#ffffff"
			android:src="@drawable/icon_show_detail"
			android:layout_marginLeft="10dp"
			android:layout_marginTop="35dp"/>

	</LinearLayout>
	<LinearLayout
		android:layout_width="wrap_content"
		android:id="@+id/tv_best_coverage"
		android:layout_height="wrap_content"
		android:visibility="gone"
		app:layout_constraintEnd_toEndOf="parent"
		android:layout_marginTop="220dp"
		app:layout_constraintStart_toStartOf="parent"
		app:layout_constraintTop_toTopOf="parent">
		<TextView
			android:layout_width="360dp"
			android:layout_height="90dp"
			android:background="#ffffff"
			android:gravity="center_vertical"
			android:paddingLeft="15dp"
			android:paddingRight="10dp"
			android:textSize="15sp"
			android:text="@string/best_coverage_show_detail"/>

	</LinearLayout>
	<LinearLayout
		android:id="@+id/view_best_coverage"
		android:layout_width="360dp"
		android:layout_height="90dp"
		android:orientation="horizontal"
		android:layout_marginTop="220dp"
		android:background="#ffffff"
		app:layout_constraintEnd_toEndOf="parent"
		app:layout_constraintStart_toStartOf="parent"
		app:layout_constraintTop_toTopOf="parent">
		<LinearLayout
			android:id="@+id/btn_multi_best"
			android:layout_width="wrap_content"
			android:layout_height="90dp"
			android:orientation="horizontal"
			android:clickable="true"
			android:focusable="true">
			<ImageView
				android:layout_width="@dimen/btn_startup_size"
				android:layout_height="@dimen/btn_startup_size"
				android:layout_marginLeft="20dp"
				android:layout_gravity="center_vertical"
				android:background="@drawable/icon_bestcoverage"
				app:layout_constraintEnd_toEndOf="parent"
				app:layout_constraintStart_toStartOf="parent"
				app:layout_constraintTop_toBottomOf="@+id/tv_startup_title" />
			<LinearLayout
				android:layout_width="wrap_content"
				android:layout_height="match_parent"
				android:layout_marginLeft="20dp"
				android:layout_marginTop="15dp"
				android:orientation="vertical">
				<TextView
					android:layout_width="wrap_content"
					android:layout_height="wrap_content"
					android:textColor="#000000"
					android:text="@string/multi_barcodes_best_coverage"/>
				<TextView
					android:layout_width="200dp"
					android:layout_height="wrap_content"
					android:layout_marginTop="8dp"
					android:textColor="#ffb8b8bf"
					android:text="@string/one_off_scan_with_a_thorough_search"/>
			</LinearLayout>

		</LinearLayout>

		<ImageButton
			android:id="@+id/btn_best_coverage_show_detail"
			android:layout_width="20dp"
			android:layout_height="50dp"
			android:background="#ffffff"
			android:src="@drawable/icon_show_detail"
			android:layout_marginLeft="10dp"
			android:layout_marginTop="35dp"/>
	</LinearLayout>
	<LinearLayout
		android:id="@+id/tv_overlap"
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:visibility="gone"
		app:layout_constraintEnd_toEndOf="parent"
		app:layout_constraintStart_toStartOf="parent"
		app:layout_constraintTop_toTopOf="parent"
		android:layout_marginTop="325dp">
		<TextView
			android:layout_width="360dp"
			android:layout_height="90dp"
			android:background="#ffffff"
			android:gravity="center_vertical"
			android:paddingLeft="15dp"
			android:paddingRight="10dp"
			android:textSize="15sp"
			android:text="@string/overlap_show_detail"/>
	</LinearLayout>
	<LinearLayout
		android:id="@+id/view_oervlap"
		android:layout_width="360dp"
		android:layout_height="90dp"
		android:orientation="horizontal"
		android:background="#ffffff"
		android:layout_marginTop="325dp"
		app:layout_constraintEnd_toEndOf="parent"
		app:layout_constraintStart_toStartOf="parent"
		app:layout_constraintTop_toTopOf="parent" >
		<LinearLayout
			android:id="@+id/btn_multi_bal"
			android:layout_width="wrap_content"
			android:layout_height="90dp"
			android:orientation="horizontal"
			android:clickable="true"
			android:focusable="true">
			<ImageView
				android:layout_width="@dimen/btn_startup_size"
				android:layout_height="@dimen/btn_startup_size"
				android:layout_marginLeft="20dp"
				android:layout_gravity="center_vertical"
				android:background="@drawable/icon_overlap"
				app:layout_constraintEnd_toEndOf="parent"
				app:layout_constraintStart_toStartOf="parent"
				app:layout_constraintTop_toBottomOf="@+id/tv_startup_title" />
			<LinearLayout
				android:layout_width="wrap_content"
				android:layout_height="match_parent"
				android:layout_marginLeft="20dp"
				android:layout_marginTop="15dp"
				android:orientation="vertical">
				<TextView
					android:layout_width="wrap_content"
					android:layout_height="wrap_content"
					android:textColor="#000000"
					android:text="@string/overlap"/>
				<TextView
					android:layout_width="200dp"
					android:layout_height="wrap_content"
					android:layout_marginTop="8dp"
					android:textColor="#ffb8b8bf"
					android:text="@string/continuous_scan_filter_duplicates"/>
			</LinearLayout>
		</LinearLayout>
		<ImageButton
			android:id="@+id/btn_overlap_show_detail"
			android:layout_width="20dp"
			android:layout_height="50dp"
			android:background="#ffffff"
			android:src="@drawable/icon_show_detail"
			android:layout_marginLeft="10dp"
			android:layout_marginTop="35dp"/>
	</LinearLayout>
	<LinearLayout
		android:id="@+id/tv_custom"
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		app:layout_constraintEnd_toEndOf="parent"
		android:layout_marginTop="430dp"
		android:visibility="gone"
		app:layout_constraintStart_toStartOf="parent"
		app:layout_constraintTop_toTopOf="parent">
		<TextView
			android:layout_width="360dp"
			android:layout_height="90dp"
			android:background="#ffffff"
			android:gravity="center_vertical"
			android:paddingLeft="15dp"
			android:paddingRight="10dp"
			android:textSize="15sp"
			android:text="@string/custom_show_detai"/>

	</LinearLayout>
	<LinearLayout
		android:id="@+id/view_custom"
		android:layout_width="360dp"
		android:layout_height="wrap_content"
		app:layout_constraintEnd_toEndOf="parent"
		android:layout_marginTop="430dp"
		android:background="#ffffff"
		app:layout_constraintStart_toStartOf="parent"
		app:layout_constraintTop_toTopOf="parent">
		<LinearLayout
			android:id="@+id/btn_custom"
			android:layout_width="wrap_content"
			android:layout_height="90dp"
			android:orientation="horizontal"
			android:clickable="true"
			android:focusable="true">
			<ImageView
				android:layout_width="@dimen/btn_startup_size"
				android:layout_height="@dimen/btn_startup_size"
				android:layout_marginLeft="20dp"
				android:layout_gravity="center_vertical"
				android:background="@drawable/icon_customized"
				app:layout_constraintEnd_toEndOf="parent"
				app:layout_constraintStart_toStartOf="parent"
				app:layout_constraintTop_toBottomOf="@+id/tv_startup_title" />
			<LinearLayout
				android:layout_width="wrap_content"
				android:layout_height="match_parent"
				android:layout_marginLeft="20dp"
				android:layout_marginTop="15dp"
				android:orientation="vertical">
				<TextView
					android:layout_width="wrap_content"
					android:layout_height="wrap_content"
					android:textColor="#000000"
					android:text="@string/custom"/>
				<TextView
					android:layout_width="200dp"
					android:layout_height="wrap_content"
					android:layout_marginTop="8dp"
					android:textColor="#ffb8b8bf"
					android:text="@string/advanced_mode"/>
			</LinearLayout>
		</LinearLayout>
		<ImageButton
			android:id="@+id/btn_custom_show_detail"
			android:layout_width="20dp"
			android:layout_height="50dp"
			android:background="#ffffff"
			android:src="@drawable/icon_show_detail"
			android:layout_marginLeft="10dp"
			android:layout_marginTop="35dp"/>
	</LinearLayout>

