<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
	xmlns:android="http://schemas.android.com/apk/res/android"
	android:layout_width="match_parent"
	android:layout_height="match_parent"
	android:orientation="vertical"
	android:background="#4F5156">

	<com.dynamsoft.demo.dynamsoftbarcodereaderdemo.weight.HistoryPreviewViewPager
		android:id="@+id/vp_history_detail"
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
		android:layout_above="@+id/lv_code_list"/>

	<ListView
		android:background="#ffffff"
		android:layout_alignParentBottom="true"
		android:id="@+id/lv_code_list"
		android:divider="#E9E9ED"
		android:layoutAnimation="@anim/listview_layout_anim"
		android:dividerHeight="1dp"
		android:layout_width="match_parent"
		android:layout_height="200dp"/>
</RelativeLayout>